<div class="task-list">
  <h1>Tasks</h1>
  <%= button_to 'Add New Task', new_task_path, method: :get, class: 'button' %>

  <table>
    <thead>
      <tr>
        <th>Title</th>
        <th>Priority</th>
        <th>Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @tasks.each do |task| %>
        <tr>
          <td><%= task.description %></td>
          <td><%= task.priority %></td>
          <td>
            <%= button_to 'Edit', edit_task_path(task), method: :get, class: 'button' %>
            <%= button_to 'Delete', task_path(task), method: :delete, data: { confirm: "Are you sure?" }, class: 'button' %> <!-- Delete Button -->
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
