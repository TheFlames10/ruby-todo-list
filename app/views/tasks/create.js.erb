// Append the new task to the table
$("tbody").append(`
  <tr data-task-id="<%= @task.id %>">
    <td><%= j @task.description %></td>
    <td><%= j @task.priority %></td>
    <td>
      <%= link_to "Delete", task_path(@task), method: :delete, remote: true, data: { confirm: "Are you sure?" } %>
    </td>
  </tr>
`);

// Clear the form inputs
$("form")[0].reset();
